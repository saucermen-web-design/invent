<%- include('../../views/partials/header') %>
        
    <div class="regContainer">
        <div class="regHeading">
            <h1>Edit <%= item.name %></h1>
        </div>
            <div class='registration'>
                <form action="/items/<%=item.id%>?_method=PUT" method="POST">
    		        Name: <input label="item-name" type="text" name="name" value="<%=item.name%>"/><br/>
    		        Type: <input label="item-type" type="text" name="type" value="<%=item.type%>"/><br/>
                    Desc.: <input label="item-desc" type="text" name="description" value="<%= item.description %>"/><br/>
                    Count: <input label="item-count" type="number" name="count" value="<%= item.count %>"/><br/>
                    Listing: <input label="item-listing" type="text" name="listing" value="<%= item.listing %>"/><br/>
    		        Is for sale? :
                    <input 
                        label="item-for-sale"
                        type="checkbox" 
                        name="for-sale"
                            <% if(item.for-sale === true){ %>
                                checked
                            <% } %>
                    /><br/>
                    <input label="submit-changes" type="submit" name="" value="Submit Changes"/>
                </form>
            </div>
        </div>
    </div>

<%- include('../../views/partials/footer') %>