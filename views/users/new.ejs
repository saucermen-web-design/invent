<%- include('../../views/partials/header') %>

        <div class="regContainer">
            <div class="regHeading">
                <h1>Register Here</h1>
            </div>
            <div class="registration">
                <form action="/users/signup" method="POST">
                    <input type="hidden" name="csrf_token" value="token-generated-here" />
                    E-mail: <input label="email" type="text" name="email" required/><br />
                    Username: <input label="username" type="text" name="username" required/><br />
                    Password: <input label="password" type="password" name="password" required/><br />
                    Confirm Password: <input label="confirm-password" type="password" name="confirm-password" required/><br />
                    <input label="signup" type="submit" value="Sign-up" />
                </form>
            </div>
            <div>
                <p>Already have an account?  <a href="/login">Log-in here</a></p>
            </div>
        </div>

<%- include('../../views/partials/footer') %>