<!-- Bring in header partial -->
<%- include('../../views/partials/header') %>

<!-- Registration container start -->
<div class="regContainer">
  <div class="regHeading">
    <h1>Register Here</h1>
  </div>
  <div class="registration">
    <!-- Registration form -->
    <form action="users/signup" method="POST">
      <input type="hidden" name="csrf_token" value="token-here" />
      <label for="email">E-mail:</label>
      <input type="text" name="email" required /><br />
      <label for="username">Username:</label>
      <input type="text" name="username" required /><br />
      <label for="password">Password:</label>
      <input type="password" name="password" required /><br />
      <!-- Confirm Password: <input label="confirm-password" type="password" name="confirm-password" required/><br /> -->
      <input type="submit" value="Sign-up" />
    </form>
  </div>
  <!-- Existing account link -->
  <div>
    <p>Already have an account? <a href="/users/login">Log-in here</a></p>
  </div>
</div>
<!-- Registration container end -->

<!-- Bring in footer partial -->
<%- include('../../views/partials/footer') %>
